<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.subirtupagina.nissandaosa"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.AplicacionNissanDaosa"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.subirtupagina.nissandaosa.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.subirtupagina.nissandaosa.Secciones"
            	  android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.subirtupagina.nissandaosa.Intro"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_intro" >
        </activity>
        <activity
            android:name="com.subirtupagina.nissandaosa.HangmanMenu"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_hangman_menu" >
        </activity>
        <activity
            android:name="com.subirtupagina.nissandaosa.Score"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name="com.subirtupagina.nissandaosa.SelectLanguage"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_select_language" >
        </activity>
        <activity
            android:name="com.subirtupagina.nissandaosa.Start"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name="com.subirtupagina.nissandaosa.StartNext"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_start_next" >
        </activity>
    </application>

</manifest>
